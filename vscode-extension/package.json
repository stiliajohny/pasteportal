{
  "name": "pasteportal",
  "displayName": "PastePortal",
  "description": "Share and retrieve text snippets with PastePortal - A secure paste service for developers",
  "version": "2.0.0",
  "publisher": "JohnStilia",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "paste",
    "share",
    "snippet",
    "code",
    "text",
    "encryption"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:pasteportal.store-paste",
    "onCommand:pasteportal.get-paste",
    "onCommand:pasteportal.store-encrypted-paste",
    "onCommand:pasteportal.get-encrypted-paste",
    "onCommand:pasteportal.sign-in",
    "onView:pasteportal-auth",
    "onView:pasteportal-my-pastes",
    "onView:pasteportal-operations",
    "onUri"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pasteportal.sign-in",
        "title": "Sign In",
        "category": "PastePortal"
      },
      {
        "command": "pasteportal.get-paste",
        "title": "Retrieve Paste",
        "category": "PastePortal"
      },
      {
        "command": "pasteportal.store-paste",
        "title": "Store Paste",
        "category": "PastePortal"
      },
      {
        "command": "pasteportal.store-encrypted-paste",
        "title": "Store Encrypted Paste",
        "category": "PastePortal"
      },
      {
        "command": "pasteportal.get-encrypted-paste",
        "title": "Get Encrypted Paste",
        "category": "PastePortal"
      },
      {
        "command": "pasteportal.refresh-pastes",
        "title": "Refresh My Pastes",
        "category": "PastePortal"
      },
      {
        "command": "pasteportal.toggle-pastes-sort",
        "title": "Toggle Sort Order",
        "category": "PastePortal"
      },
      {
        "command": "pasteportal.openInBrowser",
        "title": "Open PastePortal in Browser",
        "category": "PastePortal"
      },
      {
        "command": "pasteportal.sign-up",
        "title": "Sign Up",
        "category": "PastePortal"
      },
      {
        "command": "pasteportal.sign-out",
        "title": "Sign Out",
        "category": "PastePortal"
      }
    ],
    "keybindings": [
      {
        "command": "pasteportal.store-paste",
        "key": "ctrl+shift+p",
        "when": "editorHasSelection"
      }
    ],
    "views": {
      "pasteportal": [
        {
          "id": "pasteportal-auth",
          "name": "Authentication",
          "when": "true"
        },
        {
          "id": "pasteportal-my-pastes",
          "name": "My Pastes",
          "when": "true"
        },
        {
          "id": "pasteportal-operations",
          "name": "Operations",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pasteportal",
          "title": "PastePortal",
          "icon": "media/logo.svg"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "pasteportal.store-paste",
          "when": "editorHasSelection",
          "group": "pasteportal"
        },
        {
          "command": "pasteportal.get-paste",
          "group": "pasteportal"
        }
      ],
      "explorer/context": [],
      "view/item/context": [],
      "editor/title": [],
      "commandPalette": [
        {
          "command": "workbench.view.pasteportal-auth",
          "when": "false"
        },
        {
          "command": "workbench.view.pasteportal-my-pastes",
          "when": "false"
        },
        {
          "command": "workbench.view.pasteportal-operations",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "PastePortal",
      "properties": {
        "pasteportal.serverUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "PastePortal server URL (base URL). API endpoint will be derived as ${serverUrl}/api"
        },
        "pasteportal.apiEndpoint": {
          "type": "string",
          "default": "https://pasteportal.app/api",
          "description": "PastePortal API endpoint URL (overrides serverUrl if set)"
        },
        "pasteportal.domain": {
          "type": "string",
          "default": "https://pasteportal.app",
          "description": "PastePortal domain URL"
        },
        "pasteportal.statusBar.enableConnectivityCheck": {
          "type": "boolean",
          "default": true,
          "description": "Enable API connectivity status check in status bar"
        },
        "pasteportal.statusBar.connectivityCheckInterval": {
          "type": "number",
          "default": 60,
          "description": "API connectivity check interval in seconds (minimum 60)",
          "minimum": 60
        },
        "pasteportal.serviceAgreementAccepted": {
          "type": "boolean",
          "default": false,
          "description": "Accept PastePortal Terms of Service"
        },
        "pasteportal.supabase.url": {
          "type": "string",
          "default": "https://fzyhbybnjhpilugkokzu.supabase.co",
          "description": "Supabase project URL (defaults to production PastePortal instance, override for self-hosting)"
        },
        "pasteportal.supabase.anonKey": {
          "type": "string",
          "default": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImZ6eWhieWJuamhwaWx1Z2tva3p1Iiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjE5MjgwNTYsImV4cCI6MjA3NzUwNDA1Nn0.8lF2lIjJM2wQD6ToJHWyMHiycrhyPMceBlBGU_0txsI",
          "description": "Supabase anonymous key (defaults to production PastePortal instance, override for self-hosting)"
        },
        "pasteportal.pastes.updateInterval": {
          "type": "number",
          "default": 0,
          "description": "Automatic pastes refresh interval in seconds (0 to disable, minimum 30)",
          "minimum": 0
        }
      }
    },
    "codeLens": {
      "language": "*"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "echo \"No compilation needed for JavaScript extension\"",
    "watch": "echo \"No watch needed for JavaScript extension\"",
    "package": "vsce package",
    "lint": "echo \"No linter configured\""
  },
  "devDependencies": {
    "@types/vscode": "^1.74.1"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "@supabase/supabase-js": "^2.81.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stiliajohny/pasteportal.git"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/stiliajohny/pasteportal/issues"
  },
  "homepage": "https://pasteportal.app"
}